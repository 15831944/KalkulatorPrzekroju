<Window x:Class="KalkulatorPrzekroju.Preview"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KalkulatorPrzekroju"
        mc:Ignorable="d"
        Title="Preview" Height="{Binding AH, Mode=TwoWay}" Width="{Binding AW, Mode=TwoWay}" Background="{Binding WindowBackground}" HorizontalAlignment="Center" VerticalAlignment="Center">

    <Canvas Name="prCanvas" Height="{Binding SCAH, Mode=TwoWay}" Width="{Binding SCAW, Mode=TwoWay}" HorizontalAlignment="Center" VerticalAlignment="Center">
        <Viewbox Height="{Binding SCAH, Mode=TwoWay}" Width="{Binding SCAW, Mode=TwoWay}" Stretch="Uniform" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Grid HorizontalAlignment="Center" VerticalAlignment="Center">
                <Path Data="{Binding Outline}" Name="Outline" Stroke="Black" StrokeThickness="1" Fill="LightGoldenrodYellow"/>
                <Path Data="{Binding Rebar}" Name="Rebar" Stroke="Black" StrokeThickness="0.5" Fill="Gray"/>
                <Path Data="{Binding Dimv}" Name="Dimv" Stroke="Black" StrokeThickness="1" Fill="Black"/>
            </Grid>
        </Viewbox>
    </Canvas>
    
</Window>
